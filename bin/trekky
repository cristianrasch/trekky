#!/usr/bin/env ruby
require 'clap'
require 'rb-fsevent'
require_relative '../lib/trekky'

source = 'source'
target = 'public'
daemon = false

Clap.run ARGV, 
  "-s" => lambda {|s| source = s },
  "-t" => lambda {|t| target = t },
  "-d" => lambda { daemon = true },
  "-h" => lambda {
    puts "usage: trekky [-h] [-s source] [-t target]"
    exit
  }

trekky = Trekky.new(source)

unless daemon 
  trekky.render_to(target)
else
  STDOUT.puts "-> Initial run (daemon mode)"
  trekky.render_to(target)
  fsevent = FSEvent.new
  fsevent.watch source do |directories|
    trekky.render_to(target)
    STDOUT.puts "-> Done processing. "
  end
  fsevent.run
end
