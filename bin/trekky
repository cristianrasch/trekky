#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(Dir.pwd, 'lib')
require 'clap'
require 'trekky/processor'
require 'trekky/daemon'

source = 'source'
target = 'public'
daemon = false

Clap.run ARGV, 
  "-s" => lambda {|s| source = s },
  "-t" => lambda {|t| target = t },
  "-d" => lambda { daemon = true },
  "-h" => lambda {
    puts "usage: trekky [-h] [-s source] [-t target]"
    exit
  }

if daemon 
  Trekky::Daemon.run source, target
else
  Trekky::Processor.run source, target
end
